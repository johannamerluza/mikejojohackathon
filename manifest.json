{
  "manifest_version": 2,
  "name": "Chrome Plugin",
  "description": "Testing Plugin",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Screenshot"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}